@model IEnumerable<ArtFold.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="categoryTable" class="table table-striped table-bordered no-wrap">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <button type="button" class="btn btn-warning edit-button">
                        <a class="text-white" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a> 
                </button> |
                <button type="button" class="btn btn-danger edit-button">
                        <a class="text-white" asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
                </button>
                
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {
        $('#categoryTable').DataTable({
            responsive: true
        });

    })
</script>
