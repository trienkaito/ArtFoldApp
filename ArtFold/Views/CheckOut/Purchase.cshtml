@model IEnumerable<ArtFold.Models.CheckOut>

<head>
    <style>
        .breadcrumb-section {
            position: relative;
            flex-wrap: wrap;
        }

        .breadcrumb-title {
            position: absolute;
        }

        .update-address-btn {
            border: none;
        }
    </style>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section">
        <img src="~/lib/ogani-master/img/breadcrumb.jpg" style="height: 130px; object-fit:cover" />
        <div class="container breadcrumb-title">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <div class="breadcrumb__option">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <span>CheckOut History</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->


    <section class="shoping-cart spad">
        <div class="container">
            @foreach (var checkOut in Model)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="my-5">Order Date: @checkOut.OrderDate.ToString("dd/MM/yyyy")</h4>
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Products</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in checkOut.CheckOutProducts)
                                    {
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img src="@item.Product.ImgUrl" alt="" style="width: 100px;" />
                                                <h5>@item.Product.Name</h5>
                                            </td>
                                            <td class="shoping__cart__price">
                                                @(item.Product.Price.ToString("N0").Replace(",", ".") + " đ")
                                            </td>
                                            <td class="shoping__cart__quantity">
                                                @item.Quantity
                                            </td>
                                            <td class="shoping__cart__total">
                                                @((item.Product.Price * item.Quantity).ToString("N0").Replace(",", ".") + " đ")
                                            </td>
                                            <td style="width: 200px">
                                                <button class="btn" style="background-color: #4CAF50"><a class="text-white" asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductID">Buy Again</a></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }





