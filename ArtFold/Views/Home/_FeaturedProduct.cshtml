@model IEnumerable<ArtFold.Models.Product>


  <!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg">
                            <img src="@product.ImgUrl" alt="">
                            <ul class="featured__item__pic__hover">
                                <li><button type="button" class="btn btn-link addCartBtn" data-product-id="@product.ProductID"><a><i class="fa fa-shopping-cart"></i></a></button></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-action="Details" asp-controller="Products" asp-route-id="@product.ProductID">@product.Name</a></h6>
                            <h5>@(product.Price.ToString("N0").Replace(",", ".") + " đ")</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Featured Section End -->





